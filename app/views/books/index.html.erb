<!DOCTYPE>

<html>
  <head>
    <title>books</title>
  </head>

  <body>
    <p id="notice"></p>
    <h1>Books</h1>
    <table>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
      
      <% @newbooks.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td>
          <%= link_to "Show", book_path(book) %>
        </td>
        <td>
          <%= link_to "Edit", edit_book_path(book) %>
        </td>
        <td>
          <%= link_to "Destroy", book_path(book), method: :delete,  "data-confirm" => "本当に削除しますか？" %>
          
          </td>
      </tr>
      
      <% end %>
      

    </table>



    <h1>New book</h1>
    <%= form_with model:@newbook, local:true do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>

    <% end %>


    </form>
  </body>
</html>